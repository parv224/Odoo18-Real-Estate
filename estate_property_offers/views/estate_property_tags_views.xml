<odoo>

    <!-- FORM VIEW -->
    <record id="estate_property_tags_form_view" model="ir.ui.view">
        <field name="name">estate.property.tags.form.view</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="estate_property_tags_list_view" model="ir.ui.view">
        <field name="name">estate.property.tags.list.view</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color"/>
            </list>
        </field>
    </record>

    <record id="action_estate_property_tags" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
